<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="15" styleClass="root-container" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controllers.LoginController">
    <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/logo1.png"/>
        </image>
    </ImageView>
    <Label text="Login" styleClass="header-label"/>
    <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="action-button"/>
    <Hyperlink text="Don't have an account? Register" onAction="#goToRegister" styleClass="register-link"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
