<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="15" styleClass="root-container" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controllers.LoginController">
    <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/logo.png"/>
        </image>
    </ImageView>
    <Label text="Login" styleClass="header-label"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin" styleClass="action-button"/>
    <Hyperlink text="Don't have an account? Register" onAction="#goToRegister"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
